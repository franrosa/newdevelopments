{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "useRootPaddingAwareAlignments": true,
        "appearanceTools": false,
        "color": {
            "custom": false,
            "defaultPalette": false,
            "palette": [
                {
                    "name": "White",
                    "slug": "white",
                    "color": "rgb(246,246,246)"
                },
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "rgb(26,26,26)"
                },
                {
                    "name": "Purple",
                    "slug": "purple",
                    "color": "rgb(59,55,70)"
                },
                {
                    "name": "Blue",
                    "slug": "blue",
                    "color": "rgb(172,212,240)"
                },
                {
                    "name": "Green",
                    "slug": "green",
                    "color": "rgb(187,239,199)"
                },
                {
                    "name": "Pink",
                    "slug": "pink",
                    "color": "rgb(241,197,249)"
                },
                {
                    "name": "Yellow",
                    "slug": "yellow",
                    "color": "rgb(255,200,118)"
                },
                {
                    "name": "Accent",
                    "slug": "accent",
                    "color": "var(--wp--preset--color--blue)"
                }
            ],
            "defaultGradients": false
        },
        "layout": {
            "allowCustomContentAndWideSize": true,
            "allowEditing": true,
            "contentSize": "calc(var(--wp--custom--grid--base) * 70)",
            "wideSize": "calc(var(--wp--custom--grid--base) * 106)"
        },
        "custom": {
            "grid": {
                "base": "8px"
            },
            "line-height": {
                "s": 1.5,
                "m": 1.33,
                "l": 1.2,
                "xl": 1
            }
        },
        "spacing": {
            "defaultSpacingSizes": false,
            "spacingSizes": [
                {
                    "name": ".5x",
                    "slug": "half-x",
                    "size": "calc(var(--wp--custom--grid--base) * .5)"
                },
                {
                    "name": "1x",
                    "slug": "1-x",
                    "size": "calc(var(--wp--custom--grid--base) * 1)"
                },
                {
                    "name": "2x",
                    "slug": "2-x",
                    "size": "calc(var(--wp--custom--grid--base) * 2)"
                },
                {
                    "name": "3x",
                    "slug": "3-x",
                    "size": "calc(var(--wp--custom--grid--base) * 3)"
                },
                {
                    "name": "4x",
                    "slug": "4-x",
                    "size": "calc(var(--wp--custom--grid--base) * 4)"
                },
                {
                    "name": "6x",
                    "slug": "6-x",
                    "size": "calc(var(--wp--custom--grid--base) * 6)"
                },
                {
                    "name": "8x",
                    "slug": "8-x",
                    "size": "calc(var(--wp--custom--grid--base) * 8)"
                }
            ]
        },
        "typography": {
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "s",
                    "size": "calc(var(--wp--custom--grid--base) * 2)"
                },
                {
                    "name": "Medium",
                    "slug": "m",
                    "size": "calc(var(--wp--custom--grid--base) * 3)"
                },
                {
                    "name": "Large",
                    "slug": "l",
                    "size": "calc(var(--wp--custom--grid--base) * 4)"
                },
                {
                    "name": "Extra large",
                    "slug": "xl",
                    "size": "clamp(calc(var(--wp--custom--grid--base) * 6), 15vw, calc(var(--wp--custom--grid--base) * 8))"
                }
            ],
            "fontFamilies": [
                {
                    "name": "Public Sans",
                    "slug": "public-sans",
                    "fontFamily": "\"Public Sans\", sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Public Sans",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/PublicSans-Light.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Public Sans",
                            "fontWeight": "600",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/PublicSans-SemiBold.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Public Sans",
                            "fontWeight": "300",
                            "fontStyle": "italic",
                            "src": [
                                "file:./assets/fonts/PublicSans-LightItalic.woff2"
                            ]
                        },
                        {
                            "fontFamily": "Public Sans",
                            "fontWeight": "600",
                            "fontStyle": "italic",
                            "src": [
                                "file:./assets/fonts/PublicSans-SemiBoldItalic.woff2"
                            ]
                        }
                    ]
                },
                {  
                    "name": "iA Writer Duo",
                    "slug": "ia-writer-duo",
                    "fontFamily": "\"iA Writer Duo\", monospace",
                    "fontFace": [
                        {
                            "fontFamily": "iA Writer Duo",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/iAWriterDuoS-Regular.woff2"
                            ]
                        },
                        {
                            "fontFamily": "iA Writer Duo",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/iAWriterDuoS-Bold.woff2"
                            ]
                        }
                    ]
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--black)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "inherit"
                },
                "typography": {
                    "textDecoration": "underline"
                }
            }
        },
        "spacing": {
            "margin": {
                "top": "0",
                "right": "0",
                "bottom": "0",
                "left": "0"
            },
            "padding": {
                "top": "0",
                "right": "0",
                "bottom": "0",
                "left": "0"
            }
        },
        "typography": {
            "fontFamily": "Public Sans",
            "fontSize": "var(--wp--preset--font-size--s)",
            "fontWeight": "300",
            "lineHeight": "var(--wp--custom--line-height--s)"
        },
        "blocks": {
            "core/column": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    }
                }
            },
            "core/columns": {
                "css": "gap: 0",
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    }
                }
            },
            "core/site-title": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    }
                },
                "elements": {
                    "link": {
                        "color": {
                            "background": "var(--wp--preset--color--white)",
                            "text": "var(--wp--preset--color--black)"
                        },
                        "css": "display: inline-block",
                        "spacing": {
                            "margin": {
                                "top": "0",
                                "right": "0",
                                "bottom": "0",
                                "left": "0"
                            },
                            "padding": {
                                "top": "var(--wp--preset--spacing--1-x)",
                                "right": "var(--wp--preset--spacing--2-x)",
                                "bottom": "var(--wp--preset--spacing--1-x)",
                                "left": "var(--wp--preset--spacing--2-x)"
                            }
                        },
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--l)",
                            "fontWeight": "600",
                            "lineHeight": "var(--wp--custom--line-height--l)"
                        }
                    }
                }
            },
            "core/site-tagline": {
                "color": {
                    "background": "var(--wp--preset--color--purple)",
                    "text": "var(--wp--preset--color--accent)"
                },
                "css": "display: inline-block; float: right",
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "var(--wp--preset--spacing--half-x)",
                        "right": "var(--wp--preset--spacing--1-x)",
                        "bottom": "var(--wp--preset--spacing--half-x)",
                        "left": "var(--wp--preset--spacing--1-x)"
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--m)",
                    "fontWeight": "600",
                    "lineHeight": "var(--wp--custom--line-height--m)"
                }
            },
            "core/heading": {
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--2-x)",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    }
                }
            },
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--2-x)",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    }
                }
            },
            "core/buttons": {
                "css": "display: flex; column-gap: var(--wp--preset--spacing--3-x)",
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--2-x)",
                        "right": "0",
                        "bottom": "var(--wp--preset--spacing--2-x)",
                        "left": "0"
                    },
                    "padding": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    }
                }
            },
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--accent)",
                    "text": "var(--wp--preset--color--black)"
                }
            },
            "core/post-date": {
                "color": {
                    "text": "inherit"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    }
                }
            },
            "core/post-terms": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    }
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "inherit"
                        },
                        "typography": {
                            "textDecoration": "none"
                        }
                    }
                }
            },
            "core/post-content": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "var(--wp--preset--spacing--3-x)",
                        "right": "var(--wp--preset--spacing--3-x)",
                        "bottom": "var(--wp--preset--spacing--3-x)",
                        "left": "var(--wp--preset--spacing--3-x)"
                    }
                }
            },
            "core/image": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "var(--wp--preset--spacing--4-x)",
                        "right": "0",
                        "bottom": "var(--wp--preset--spacing--2-x)",
                        "left": "0"
                    }
                }
            },
            "core/pullquote": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "var(--wp--preset--spacing--3-x)",
                        "right": "var(--wp--preset--spacing--3-x)",
                        "bottom": "var(--wp--preset--spacing--3-x)",
                        "left": "var(--wp--preset--spacing--3-x)"
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--l)",
                    "lineHeight": "var(--wp--custom--line-height--l)"
                }
            },
            "core/code": {
                "border": {
                    "color": "var(--wp--preset--color--accent)",
                    "style": "solid",
                    "width": "calc(var(--wp--custom--grid--base) * .5)"
                },
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--3-x)",
                        "right": "var(--wp--preset--spacing--3-x)",
                        "bottom": "var(--wp--preset--spacing--3-x)",
                        "left": "0"
                    },
                    "padding": {
                        "top": "var(--wp--preset--spacing--2-x)",
                        "right": "var(--wp--preset--spacing--3-x)",
                        "bottom": "var(--wp--preset--spacing--2-x)",
                        "left": "var(--wp--preset--spacing--3-x)"
                    }
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ia-writer-duo)",
                    "fontSize": "var(--wp--preset--font-size--s)",
                    "fontWeight": "400",
                    "lineHeight": "var(--wp--custom--line-height--s)"
                }
            },
            "core/post-template": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "var(--wp--preset--spacing--3-x)",
                        "right": "0",
                        "bottom": "var(--wp--preset--spacing--3-x)",
                        "left": "0"
                    }
                }
            },
            "core/query-pagination": {
                "css": "display: flex; column-gap: var(--wp--preset--spacing--3-x); box-sizing: border-box",
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "var(--wp--preset--spacing--2-x)",
                        "right": "var(--wp--preset--spacing--3-x)",
                        "bottom": "var(--wp--preset--spacing--2-x)",
                        "left": "var(--wp--preset--spacing--3-x)"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}